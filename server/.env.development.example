NODE_ENV=development
PORT=3005
LOG_LEVEL=info

# Local PostgreSQL for development
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/horn?schema=public"

JWT_ACCESS_SECRET="dev-access-secret-change"
JWT_REFRESH_SECRET="dev-refresh-secret-change"
JWT_ACCESS_TTL=15m
JWT_REFRESH_TTL=30d

# Comma-separated origins for browser app
CORS_ORIGINS="http://localhost:5173,http://localhost:5174,http://localhost:3000"

RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=1000
AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_MAX=100

# Keep true for local convenience
SEED_ON_STARTUP=true
