# Environment Configuration for Horn Server

# =================================
# Basic Configuration
# =================================
NODE_ENV=production
PORT=3005
LOG_LEVEL=info

# =================================
# Database Configuration
# =================================
# Replace with your actual database credentials
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/horn?schema=public

# =================================
# JWT Configuration
# =================================
# IMPORTANT: Generate strong secrets for production!
# You can use: openssl rand -base64 32
JWT_ACCESS_SECRET=replace_me_with_a_very_long_secret_at_least_32_characters_long
JWT_REFRESH_SECRET=replace_me_with_another_different_secret_at_least_32_chars
JWT_ACCESS_TTL=15m
JWT_REFRESH_TTL=30d

# =================================
# CORS Configuration
# =================================
# Comma-separated list of allowed origins
# Example: https://your-domain.com,https://www.your-domain.com
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:8080

# =================================
# Optional - Seed & Demo Configuration
# =================================
# Whether to seed database on startup (set to false in production)
SEED_ON_STARTUP=false

# Enable test/demo mode (set to false in production)
TEST_MODE_ENABLED=false
TEST_MODE_RESPONSE_DELAY_MS=900

# Demo login email for testing
DEMO_LOGIN_EMAIL=commander.north@horn.local

# =================================
# Optional - Rate Limiting
# =================================
# General API rate limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=300

# Auth endpoints rate limiting
AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_MAX=15
